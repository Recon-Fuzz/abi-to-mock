{
  "name": "abi-to-mock",
  "version": "1.0.7",
  "description": "Generate Solidity mock contracts from Ethereum ABIs",
  "main": "dist/index.js",
  "browser": "dist/browser.js",
  "module": "dist/browser.js",
  "types": "dist/index.d.ts",
  "bin": {
    "abi-to-mock": "./dist/cli.wrapper.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build:node && npm run build:browser",
    "build:node": "tsc && npm run create-cli-wrapper",
    "build:browser": "webpack --mode production --output-path dist",
    "pretest": "npm run build && mkdir -p test/transformers test/mocks",
    "test": "jest",
    "dev": "tsc -w",
    "prepare": "npm run build",
    "clean": "rm -rf dist test-output",
    "lint": "eslint src/**/*.ts",
    "copy-templates": null,
    "create-cli-wrapper": "mkdir -p dist && echo '#!/usr/bin/env node\nrequire(\"./cli.js\");' > dist/cli.wrapper.js && chmod +x dist/cli.wrapper.js",
    "test:browser": "npm run build:browser && echo 'Open tests/browser.html in your browser to test'"
  },
  "dependencies": {
    "handlebars": "^4.7.8",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/handlebars": "^4.1.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/yargs": "^17.0.33",
    "eslint": "^9.18.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "typescript": "^5.7.3",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/0kn0t/abi-to-mock.git"
  },
  "bugs": {
    "url": "https://github.com/0kn0t/abi-to-mock/issues"
  },
  "homepage": "https://github.com/0kn0t/abi-to-mock#readme",
  "keywords": [
    "solidity",
    "mock",
    "testing",
    "abi",
    "ethereum",
    "smart-contracts"
  ],
  "author": {
    "name": "Knot",
    "email": "terabase7@gmail.com"
  },
  "license": "MIT"
}
